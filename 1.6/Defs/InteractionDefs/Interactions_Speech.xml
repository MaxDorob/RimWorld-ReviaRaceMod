<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RulePackDef>
		<defName>Revia_SpeechUtility</defName>
		<rulePack>
			<rulesStrings>
				<li>spokeof->spoke about</li>
				<li>spokeof->talked about</li>
				<li>spokeof->offered thoughts on</li>
				<li>spokeof->discussed</li>
				<li>spokeof->explained</li>
				<li>spokeof->described</li>

				<li>praised->gave a speech about</li>
				<li>praised->spoke about</li>
				<li>praised->talked about</li>
				<li>praised->praised</li>
