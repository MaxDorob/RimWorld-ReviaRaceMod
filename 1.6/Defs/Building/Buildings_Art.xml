<?xml version="1.0" encoding="utf-8" ?>
<Defs> 
  <ThingDef ParentName="ArtBuildingBase">
    <defName>ReviaSkarnesSculpture</defName>
    <label>skarne's sculpture</label>
    <description>A sculpture of the nine-tailed Bloody Goddess.</description>
		<drawerType>RealtimeOnly</drawerType>
		<minifiedDef>MinifiedThingRealtimeDraw</minifiedDef>
		<minifiedManualDraw>true</minifiedManualDraw>
		<fillPercent>0.5</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
		<thingCategories>
			<li>BuildingsArt</li>
		</thingCategories>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
			<texPath>Things/Building/Art/SculptureSmall</texPath>
			<addTopAltitudeBias>true</addTopAltitudeBias>
			<drawSize>(1.6,1.6)</drawSize>
		</graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>45</Beauty>
      <WorkToMake>30000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
		<comps>
			<li Class="CompProperties_Statue">
				<compClass>ReviaRace.CompSkarneStatue</compClass>
				<nameMaker>ReviaRace_SkarneNamerStatue</nameMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
				<statueBaseGraphic>
					<texPath>Things/Building/StatueBase</texPath>
					<graphicClass>Graphic_Single</graphicClass>
					<drawSize>(1.5, 1.5)</drawSize>
				</statueBaseGraphic>
			</li>
		</comps>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Artistic</workSkill>
			<unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
			<effectWorking>Sculpt</effectWorking>
			<soundWorking>Recipe_Sculpt</soundWorking>
			<recipeUsers>
				<li>TableSculpting</li>
			</recipeUsers>
			<skillRequirements>
				<Artistic>7</Artistic>
			</skillRequirements>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Plasteel</li>
					<li>Jade</li>
					<li>Uranium</li>
					<li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
					<li MayRequire="Ludeon.RimWorld.Odyssey">Obsidian</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<building>
			<paintable>true</paintable>
		</building>
  </ThingDef>


	<RulePackDef>
		<defName>ReviaRace_SkarneNamerStatue</defName>
		<include>
			<li>ReviaHighNamerDeity</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_statue_name->[r_deityName]</li>
				<li>r_statue_name->[r_deityName]'s statue</li>
				<li>r_statue_name->[statueAdj] [r_deityName]</li>
				<li>r_statue_name->[r_deityName], the [statueAdj]</li>
				<li>r_statue_name->The [statueAdj] [subjectNoun]</li>
				<li>r_statue_name->[statueAdj] [subjectNoun]</li>
				<li>r_statue_name->Figure of [statueIdea]</li>

				<li>statueAdj->Silent</li>
				<li>statueAdj->Eternal</li>
				<li>statueAdj->Perfect</li>
				<li>statueAdj->Timeless</li>
				<li>statueAdj->Unbroken</li>
				<li>statueAdj->Echoing</li>
				<li>statueAdj->Ideal</li>
				<li>statueAdj->Bloody</li>
				<li>statueAdj->Echoing</li>
				<li>statueAdj->Ruthless</li>

				<li>subjectNoun->Legend</li>
				<li>subjectNoun->Spirit</li>
				<li>subjectNoun->Soul</li>
				<li>subjectNoun->Vermilion</li>
				<li>subjectNoun->Contemplation</li>

				<li>statueIdea->Strength</li>
				<li>statueIdea->Wisdom</li>
				<li>statueIdea->Battle</li>
				<li>statueIdea->Spirit</li>
				<li>statueIdea->Bloody Night</li>
				<li>statueIdea->Bloody Rain</li>
				<li>statueIdea->Sunrise</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
</Defs>