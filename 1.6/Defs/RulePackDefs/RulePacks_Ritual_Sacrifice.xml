<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RulePackDef>
    <defName>Revia_NamerRitualSacrifice</defName>
    <rulePack>
      <rulesStrings>
        <li>r_ritualName(p=2)->[memeAdjective] [sacrifice]</li>
        <li>r_ritualName->[sacrifice] of [chosenTheme]</li>
        <li>r_ritualName->[chosenAdjective] [sacrifice]</li>
        <li>r_ritualName->[keyDeity]'s [sacrifice]</li>
        <li>r_ritualName->[sacrifice] of [keyDeity]</li>
        <li>r_ritualName->[sacrifice] of [memeConcept]</li>
        <li>r_ritualName->[sacrifice] of [chosenIdeoName]</li>

        <li>sacrifice->sacrifice</li>
        <li>sacrifice->offering</li>
        <li>sacrifice->immolation</li>
        <li>sacrifice->oblation</li>
        <li>sacrifice->slaughtering</li>
        
      </rulesStrings>
    </rulePack>
  </RulePackDef>

	<RulePackDef>
		<defName>Revia_NamerRitualOffering</defName>
		<rulePack>
			<rulesStrings>
				<li>r_ritualName(p=2)->[memeAdjective] [offering]</li>
				<li>r_ritualName->[offering] of [chosenTheme]</li>
				<li>r_ritualName->[chosenAdjective] [offering]</li>
				<li>r_ritualName->[keyDeity]'s [offering]</li>
				<li>r_ritualName->[offering] of [keyDeity]</li>
				<li>r_ritualName->[offering] of [memeConcept]</li>
				<li>r_ritualName->[offering] of [chosenIdeoName]</li>

				<li>offering->sacrifice</li>
				<li>offering->offering</li>
				<li>offering->oblation</li>

			</rulesStrings>
		</rulePack>
	</RulePackDef>
  
	<RulePackDef>
		<defName>Revia_NamerRitualConversion</defName>
		<directTestable>true</directTestable>
		<include>
			<li>ReviaHighNamerDeity</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_ritualName->True Revia Conversion</li>
				<li>r_ritualName->Conversion Ritual</li>
				<li>r_ritualName->[ritualType] for [name]</li>

				<li>ritualType->Conversion</li>
				<li>ritualType->Ascension</li>
				<li>ritualType->Integration</li>

			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
</Defs>