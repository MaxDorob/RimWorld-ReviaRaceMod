<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<PreceptDef Name="ReviaPreceptBase" Abstract="True">
		<iconPath>UI/icons/Revia_XenotypeIcon</iconPath>
		<issue>Ritual</issue>
		<preceptClass>Precept_Ritual</preceptClass>
		<classic>true</classic>
		<classicExtra>true</classicExtra>
		<visible>false</visible>
		<countsTowardsPreceptLimit>false</countsTowardsPreceptLimit>
		<selectionWeight>1.0</selectionWeight>
		<capitalizeAsTitle>false</capitalizeAsTitle>
		<useRepeatPenalty>false</useRepeatPenalty>
		<iconIgnoresIdeoColor>true</iconIgnoresIdeoColor>
		<ignoreNameUniqueness>true</ignoreNameUniqueness>
		<isNonIdeoRitual>true</isNonIdeoRitual>
	</PreceptDef>
	
  <PreceptDef ParentName="ReviaPreceptBase">
    <defName>Revia_PrisonerSacrification</defName>
    <label>sacrification</label>
    <tipLabelOverride>Sacrification</tipLabelOverride>
    <description>An executioner will publicly sacrifice a prisoner. The executioner will give a short speech, and then execute the prisoner by cutting.</description>
    <ritualPatternBase>Revia_SacrificePrisoner</ritualPatternBase>
  </PreceptDef>

	<PreceptDef ParentName="ReviaPreceptBase">
		<defName>Revia_BlessingForSoulreap</defName>
		<label>soulreap blessing</label>
		<tipLabelOverride>Soulreap blessing</tipLabelOverride>
		<description>A sacrificer will offer bloodstones to the Skarne for the Soulreap blessing.</description>
		<ritualPatternBase>Revia_BleesingForSoulreap</ritualPatternBase>
	</PreceptDef>

	<PreceptDef ParentName="ReviaPreceptBase">
		<defName>Revia_XenotypeConversation</defName>
		<label>revia conversation</label>
		<tipLabelOverride>Revia conversation</tipLabelOverride>
		<description>A sacrificer will offer bloodstones to the Skarne to become a true Revia.</description>
		<ritualPatternBase>Revia_XenotypeConversation</ritualPatternBase>
	</PreceptDef>

	<PreceptDef ParentName="ReviaPreceptBase" MayRequire="Ludeon.RimWorld.Royalty">
		<defName>Revia_PsycastRitual</defName>
		<label>revia psycast blessing</label>
		<tipLabelOverride>Revia psycast blessing</tipLabelOverride>
		<description>A sacrificer will offer a mystical stone to Skarne for a connection to psychic powers.</description>
		<ritualPatternBase>Revia_PsycastRitual</ritualPatternBase>
	</PreceptDef>

</Defs>