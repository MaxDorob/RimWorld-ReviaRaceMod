<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<DutyDef>
		<defName>Revia_SpeakOnCellFacingSpectators</defName>
		<hook>HighPriority</hook>
		<socialModeMax>Off</socialModeMax>
		<ritualSpectateTarget>true</ritualSpectateTarget>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<!-- Goto my spot -->
				<li Class="JobGiver_GotoTravelDestination">
					<exactCell>true</exactCell>
					<locomotionUrgency>Jog</locomotionUrgency>
					<ritualTagOnArrival>Arrived</ritualTagOnArrival>
				</li>

				<!-- Arrived -->
				<li Class="ReviaRace.JobGiver.JobGiver_GiveSpeechFacingTarget">
					<showSpeechBubbles>false</showSpeechBubbles>
					<faceSpectatorsIfPossible>true</faceSpectatorsIfPossible>
					<soundDefMale>Speech_Ideoligious_Male</soundDefMale>
					<soundDefFemale>Speech_Ideoligious_Female</soundDefFemale>
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>

	<DutyDef>
		<defName>Revia_DeliverPawnToAltar</defName>
		<hook>HighPriority</hook>
		<socialModeMax>Off</socialModeMax>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<!-- Goto pawn -->
				<li Class="ReviaRace.JobGiver_DeliverPawnToAltar">
					<exactCell>true</exactCell>
					<locomotionUrgency>Jog</locomotionUrgency>
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>


	<DutyDef>
		<defName>Revia_Sacrifice</defName>
		<hook>HighPriority</hook>
		<socialModeMax>Off</socialModeMax>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="ReviaRace.JobGiver_Sacrifice"/>
			</subNodes>
		</thinkNode>
	</DutyDef>

	<DutyDef>
		<defName>InvokeBlessingForSoulreap</defName>
		<hook>HighPriority</hook>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="ReviaRace.JobGiver.JobGiver_TakeBloodstonesForBlessingRitual"/>

				<li Class="JobGiver_GotoTravelDestination">
					<exactCell>true</exactCell>
					<locomotionUrgency>Jog</locomotionUrgency>
					<ritualTagOnArrival>Arrived</ritualTagOnArrival>
				</li>

				<li Class="ReviaRace.JobGiver.JobGiver_InvokeBlessing">
				</li>

			</subNodes>
		</thinkNode>
	</DutyDef>

	<DutyDef>
		<defName>Revia_LayDownAwake</defName>
		<hook>HighPriority</hook>
		<socialModeMax>Off</socialModeMax>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="ReviaRace.JobGiver.JobGiver_LayDownAwake">
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>

	<DutyDef>
		<defName>Revia_TakeBloodstonesAndDeliverPawnToAltar</defName>
		<hook>HighPriority</hook>
		<socialModeMax>Off</socialModeMax>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="ReviaRace.JobGiver.JobGiver_TakeCountToInventory">
					<count>10</count>
				</li>
				<!-- Goto pawn -->
				<li Class="ReviaRace.JobGiver_DeliverPawnToAltar">
					<exactCell>true</exactCell>
					<locomotionUrgency>Jog</locomotionUrgency>
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>

</Defs>